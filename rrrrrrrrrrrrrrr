resource "null_resource" "check_capacity" {
  provisioner "local-exec" {
    command = <<EOT
      echo "Checking Azure capacity for VM size Standard_L8s_v3 in eastus..."
      result=$(az vm list-skus --location eastus --query "[?name=='Standard_L8s_v3' && locationInfo[0].zones != null].{Name:name}" -o json)
      if [ -z "$result" ]; then
        echo "No capacity available for Standard_L8s_v3 in eastus. Halting deployment."
        exit 1
      else
        echo "Capacity available for Standard_L8s_v3 in eastus. Proceeding with deployment."
      fi
    EOT
  }
}

resource "azurerm_linux_virtual_machine" "vm" {
  depends_on          = [null_resource.check_capacity] # Ensures VM creation only starts after capacity check
  name                = "example-vm"
  resource_group_name = azurerm_resource_group.example.name
  location            = azurerm_resource_group.example.location
  size                = "Standard_L8s_v3"
  admin_username      = "adminuser"
  network_interface_ids = [azurerm_network_interface.example.id]

  os_disk {
    caching              = "ReadWrite"
    storage_account_type = "Standard_LRS"
  }

  lifecycle {
    ignore_changes = [tags]
  }
}
