resource "aws_iam_role" "admin_role" {
  name = "ssm-session-admin"

  assume_role_policy = jsonencode({
    Version = "2012-10-17",
    Statement = [{
      Effect    = "Allow"
      Principal = { AWS = "arn:aws:iam::104899847547:root" }
      Action    = "sts:AssumeRole"
      Condition = {
        StringEquals = {
          "aws:PrincipalOrgID" = "o-xxxxxxxxxx"   # <-- your Org ID
        }
      }
    }]
  })
}
